<div class='flex flex-col gap-4 p-6'>
  <h2 class='text-3xl font-bold'>Hi, <%= current_user.full_name %>!</h2>

  <% if current_user.task_manager? %>
    <%= render_button 'New Task', href: new_task_path, as: :link, variant: :outline, class: 'w-fit px-4 py-2' %>
  <% end %>

  <%= render_tabs do %>
    <%= tab_list do %>
      <%= tab 'My Tasks' %>
      <%= tab 'Team' %>
    <% end %>
    <%= tab_panels do %>
      <%= tab_panel do %>
        <%= turbo_frame_tag "tasks_#{dom_id(current_user)}", src: tasks_path %>
      <% end %>
      <%= tab_panel do %>
      <% end %>
    <% end %>
  <% end %>
</div>


