<%= turbo_frame_tag "tasks_#{dom_id(current_user)}" do %>
  <div class='mt-4 w-full flex flex-col gap-2'>
    <% @tasks.each do |task| %>
      <%= render_card do %>
        <div class='w-full flex flex-row gap-2 justify-between overflow-hidden'>
          <div class='flex-1 overflow-x-auto'>
            <%= task.name %>
          </div>
          <div class='w-fit px-2'>
            <%= task.hours %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
