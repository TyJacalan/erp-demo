<header class='sticky top-0 z-30 h-14 w-full hidden sm:flex flex-row items-center justify-between gap-4 pl-16 pr-4'>
    <div class='w-fit'>
      <%= render_dropdown_menu do %>
        <%= dropdown_menu_trigger do %>
          <%= render_button class: 'flex flex-row gap-2', variant: :outline do %>
            <%= controller_name.capitalize %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 h-4 w-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
          </svg>
          <% end %>
        <% end %>
        <%= dropdown_menu_content do %>
          <%= dropdown_menu_item do %>
            <%= link_to "Profile", users_path %>
          <% end %>
          <%= dropdown_menu_item do %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: 'text-muted-foreground' %>
          <% end %>
      <% end %>
    <% end %>
    </div>
    <div class='h-full w-full flex flex-row items-center justify-end gap-4'>
      <%= render_input name: 'search', id: 'search', placeholder: 'Search...', class: 'w-1/3' %>
        <%= render partial: 'components/layout/mode_switch' %>
        <%= render partial: 'components/layout/account_modal' %>
    </div>
</header>