<header class="sticky top-0 z-30 h-fit w-full flex py-2 px-6 sm:hidden">
    <%= render_sheet direction: "left" do %>
        <%= sheet_trigger do %>
            <%= render_button variant: :outline do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <% end %>
        <% end %>
        <%= sheet_content do %>
            <div class='h-full w-full flex flex-col justify-between'>
                <nav class="flex-1 h-full flex flex-col gap-6 text-lg font-medium">
                </nav>
                <div class='h-fit w-full flex flex-row items-center gap-4'>
                    <%= render partial: 'components/layout/account_modal' %>
                    <%= render partial: 'components/layout/mode_switch' %>
                </div>
            </div>
        <% end %>
    <% end %>
</header>