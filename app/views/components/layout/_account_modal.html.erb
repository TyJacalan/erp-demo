<%= render_dropdown_menu do %>
    <%= dropdown_menu_trigger do %>
        <%= render_avatar src: current_user.avatar_url, class: 'cursor-pointer mx-2' %>
    <% end %>
    <%= dropdown_menu_content do %>
        <%= dropdown_menu_label "My Account" %>

        <%= render_separator class: "my-1" %>
        
        <%= dropdown_menu_item do %>
            <%= render_button 'Profile', href: profile_index_path, as: :link, variant: :ghost, class: 'text-muted-foreground w-full' %>
        <% end %>
        <%= dropdown_menu_item do %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: 'text-muted-foreground w-full' %>
        <% end %>
    <% end %>
<% end %>