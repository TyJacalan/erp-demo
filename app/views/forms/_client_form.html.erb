<%= turbo_frame_tag 'client_form', loading: 'lazy' do %>
  <%= render_form_for resource, url: path, method: method do |f| %>
    <% unless method == :delete %>
    <%= render_carousel do %>
      <%= carousel_slides do %>
        <%= carousel_slide do %>
          <%= f.label :name %>
          <%= f.text_field :name, autocomplete: 'name' %>

          <%= f.label :abbreviation %>
          <%= f.text_field :abbreviation, autocomplete: 'none' %>

          <% if method == :post %>
            <%= f.file_field :logo %>
          <% end %>

          <%= f.label :mission %>
          <%= f.textarea :mission, autocomplete: 'none' %> 
        <% end %>
        <%= carousel_slide do %>
          <%= f.label :website %>
          <%= f.text_field :website, autocomplete: 'url' %>

          <%= f.check_box :nonprofit_status, label: 'Registered Nonprofit' %>
          <%= f.label :nonprofit_status %>

          <%= f.label :issue_areas %>
          <%= f.text_field :issue_areas, autocomplete: 'off' %>

          <%= render partial: 'forms/shared/submit', locals: { method: method } %>
        <% end %>
        <%= carousel_slide do %>
          <%= f.fields_for :location do |location_field| %>
            <%= location_field.label :street %>
            <%= location_field.text_field :street, autocomplete: 'street-name' %>

            <div class='flex flex-row gap-2'>
              <div class='flex flex-col gap-2'>
                <%= location_field.label :city %>
                <%= location_field.text_field :city, autocomplete: 'address-level2' %>
              </div>

              <div class='flex flex-col gap-2'>
                <%= location_field.label :country %>
                <%= location_field.text_field :country, autocomplete: 'country-name' %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <%= render_dialog do %>
      <%= dialog_trigger do %>
        <%= render_button variant: :destructive_outline do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        <% end %>
      <% end %>
      <%= dialog_content do %>
        <div class="flex flex-col space-y-2 sm:text-left">
          <h2 class="text-lg font-semibold">Are you absolutely sure?</h2>
          <p class="text-sm text-muted-foreground">
          This action cannot be undone. This will permanently delete <%= resource.name %> and remove their data from our servers.
          </p>
        </div>

        <div class="flex w-full flex-row items-center justify-end gap-2 mt-4">
          <%= render_button "Cancel", variant: :outline, data: { action: "ui--dialog#close" } %>
          <%= f.submit "Delete", variant: :destructive, data: { turbo: false } %>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<% end %>

