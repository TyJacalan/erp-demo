<%= render_separator class: 'my-6' %>

<% if method == :post %>
  <%= render_button 'Create', class: 'w-full' %>
<% elsif method == :patch %>
  <%= render_button 'Update', class: 'w-full' %>
<% elsif method == :delete %>
  <%= render_button 'Delete', variant: :destructive, class: 'w-full' %>
<% else %>
  <%= render_button 'Save' %>
<% end %>
