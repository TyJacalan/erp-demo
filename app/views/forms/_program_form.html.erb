<%= turbo_frame_tag 'program_form', loading: 'lazy' do %>
  <%= render_form_for [organization, program], url: path, method: method, class: 'flex flex-col gap-4' do |f| %>
    <% unless method == :delete %>
      <%= f.label :name %>
      <%= f.text_field :name, autocomplete: 'organization' %>
      <%= f.error_message :name %>

      <%= f.label :description %>
      <%= f.textarea :description, autocomplete: 'off' %>
      <%= f.error_message :description %>

      <% if organization.client %>
        <div class='flex flex-row gap-2'>
          <div class='flex flex-col space-y-2'>
            <%= f.label :current_funding %>
            <%= f.number_field :current_funding, autocomplete: 'off' %>
          </div>
          <div class='flex flex-col space-y-2'>
            <%= f.label :target_funding %>
            <%= f.number_field :target_funding, autocomplete: 'off' %>
          </div>
        </div>
        <%= f.error_message :current_funding %>
        <%= f.error_message :target_funding %>
      <% end %>

      <%= f.label :issue_areas %>
      <%= f.text_field :issue_areas, autocomplete: 'off' %>
      <%= f.error_message :issue_areas %>

      <%= f.submit 'Create Program' %>
    <% else %>
      <%= render_button variant: :ghost do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% end %>
